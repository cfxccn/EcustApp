<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/textViewPBText"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:text="正在加载"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewPBid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewPBTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="28dp"
        android:text="发布时间"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff909090" />

    <TextView
        android:id="@+id/textViewPBUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewPBTime"
        android:layout_alignBottom="@+id/textViewPBTime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:text="作者"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff909090" />

</RelativeLayout>