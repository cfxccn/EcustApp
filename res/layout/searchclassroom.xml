<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchClassroom" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="空教室查询"
        android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spinner_wday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/spinner_during" />

        <Spinner
            android:id="@+id/spinner_during"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/spinner_wday"
            android:layout_toLeftOf="@+id/btnsearch_classroom"
            android:layout_toRightOf="@+id/textView1" />

        <Button
            android:id="@+id/btnsearch_classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner_during"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/spinner_during"
            android:text="搜索" />

        <TextView
            android:id="@+id/tvRoomA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spinner_wday"/>

        <GridView
            android:id="@+id/gvRoomA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvRoomA"
            android:layout_alignRight="@+id/btnsearch_classroom"
            android:layout_below="@+id/tvRoomA"
            android:numColumns="4" >

        </GridView>

        <TextView
            android:id="@+id/tvRoomB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gvRoomA"
            android:layout_below="@+id/gvRoomA"/>
        <GridView
            android:id="@+id/gvRoomB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvRoomB"
            android:layout_alignRight="@+id/btnsearch_classroom"
            android:layout_below="@+id/tvRoomB"
            android:numColumns="5" >

        </GridView>
                <TextView
            android:id="@+id/tvRoomC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gvRoomB"
            android:layout_below="@+id/gvRoomB"/>
        <GridView
            android:id="@+id/gvRoomC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvRoomC"
            android:layout_alignRight="@+id/btnsearch_classroom"
            android:layout_below="@+id/tvRoomC"
            android:numColumns="5" >

        </GridView>
</RelativeLayout>