<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.usta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 使用网络功能所需权限 -->

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <!-- SDK离线地图和cache功能需要读写外部存储器 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_SETTINGS" >
    </uses-permission>
    <!-- 获取设置信息和详情页直接拨打电话需要以下权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CALL_PHONE" >
    </uses-permission>
    <!-- 使用定位功能所需权限,demo已集成百度定位SDK,不使用定位功能可去掉以下6项 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>

    <permission android:name="android.permission.BAIDU_LOCATION_SERVICE" >
    </permission>

    <uses-permission android:name="android.permission.BAIDU_LOCATION_SERVICE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_GPS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.usta.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.usta.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.usta.SearchDrugs"
            android:label="药品查询" >
        </activity>
        <activity
            android:name="com.usta.SearchBooks"
            android:label="图书查询" >
        </activity>
        <activity
            android:name="com.usta.SearchClassroom"
            android:label="教室查询" >
        </activity>
        <activity
            android:name="com.usta.SearchLecture"
            android:label="讲座查询" >
        </activity>
        <activity
            android:name="com.usta.Joke"
            android:label="每日笑话" >
        </activity>
        <activity
            android:name="com.usta.Linknet"
            android:label="链接校园网" >
        </activity>
        <activity
            android:name="com.usta.Morningtrain"
            android:label="晨跑查询" >
        </activity>
        <activity
            android:name="com.usta.SchoolBus"
            android:label="校车查询" >
        </activity>
        <activity
            android:name="com.usta.Advise"
            android:label="意见反馈" >
        </activity>
        <activity
            android:name="com.usta.NewPost"
            android:label="发表新帖" >
        </activity>
        <activity
            android:name="com.usta.JobTitleView"
            android:label="课余兼职" >
        </activity>
        <activity
            android:name="com.usta.JobDetail"
            android:label="课余兼职-详细信息" >
        </activity>
        <activity
            android:name="com.usta.NewsDetail"
            android:label="新闻通知-详细信息" >
        </activity>
        <activity
            android:name="com.usta.Map"
            android:configChanges="orientation|keyboardHidden"
            android:label="校园地图" >
        </activity>
        <activity
            android:name="com.usta.NearbyViewInMap"
            android:configChanges="orientation|keyboardHidden"
            android:label="地图模式" >        
            </activity>
            
         <activity
            android:name="com.usta.NearbyDetail"
            android:label="附近详情" >
        </activity>
